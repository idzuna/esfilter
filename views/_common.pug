mixin style()
  style.
    h1 {
      font-size: 1.7em;
    }
    h2 {
      font-size: 1.4em;
    }
    a {
      display: inline-block;
      color: blue !important;
    }
    .back {
      margin: .3em 0;
    }
    nav {
      line-height: 1.3em;
    }

mixin header(base)
  nav
    a(href=base + "/") フォルダー一覧
    =" | "
    a(href=base + "/search") 検索
    =" | "
    a(href=base + "/filters") フィルター設定
    =" | "
    a(href=base + "/log") ログ
    =" | "
    a(href=base + "/settings") メンテナンス

mixin footer(base)
  hr
  nav
    a(href=base + "/") フォルダー一覧
    =" | "
    a(href=base + "/search") 検索
    =" | "
    a(href=base + "/filters") フィルター設定
    =" | "
    a(href=base + "/log") ログ
    =" | "
    a(href=base + "/settings") メンテナンス
